#reviewers_feedback_editor_modal.ml-3
  =form_with(url: article_type_fact_checking_doc_reviewers_feedback_index_path(@article_type, @article_type.fact_checking_doc),
             local: true) do |form|
    .field{ id: 'reviewers_feedback_editable', "data-controller" => "summernote" }
      =form.text_area 'reviewers_feedback[body]', data: { editor: 'summernote' }
    .mt-3.mb-4
      =form.submit "create feedback", class: 'btn btn-sm btn-outline-dark',
                   onclick: "sessionStorage.removeItem('reviewersFeedback');"
      =form.submit "approve!", class: 'btn btn-sm btn-outline-dark',
                   onclick: "sessionStorage.removeItem('reviewersFeedback');"

  .position-relative
    %hr/
    .label_to_line_modal
      recent feedback

