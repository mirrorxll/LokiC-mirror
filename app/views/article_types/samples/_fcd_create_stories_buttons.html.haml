-if samples.count.positive? || @iteration.creation
  .row
    .col-11.offset-1
      =link_to('fact checking', article_type_fact_checking_doc_path(@article_type, @article_type.fact_checking_doc),
               class: 'btn btn-sm btn-outline-dark', target: '_blank')
      -if @iteration.creation
        =render 'article_types/samples/stories_link'
      -if @iteration.export.nil?
        -if correct_account?(@article_type)
          -if @iteration.creation.eql?(nil) && @article_type.fact_checking_doc.approval_editors.count > 1
            =link_to('create samples from the last iteration',
                      execute_article_type_iteration_creations_path(@article_type, @iteration),
                      class: 'btn btn-sm btn-outline-dark', method: :post, remote: true)
          -elsif @iteration.creation
            =link_to('purge samples from the last iteration',
                      purge_article_type_iteration_creations_path(@article_type, @iteration),
                      id: 'purge_stories', class: 'btn btn-sm btn-outline-danger',
                      method: :delete, remote: true)
