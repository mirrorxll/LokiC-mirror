-status = @article_type.status

.current_progress_status
  =link_to_if(correct_account?(@article_type), status.name, '#', class: "badge badge-pill badge-#{status_color(status.name)}")

.change_progress_status_form.d-none
  =form_with(url: change_article_type_progress_statuses_path(@article_type, @iteration),
             html: { class: 'd-inline', onchange: "Rails.fire(this, 'submit')" }, method: :patch) do |form|
    =form.collection_select :status_id, Status.article_type_dev_statuses, :id, :name, { prompt: '' }, selected: status.id

:javascript
  document.querySelector('.current_progress_status a').addEventListener('click', function (evt) {
    evt.preventDefault();
    evt.target.parentNode.classList.add('d-none');
    document.getElementsByClassName('change_progress_status_form')[0].classList.remove('d-none');
    return false;
  })
