#factoid_type_source_properties
  .row.mb-2.font-weight-bold
    .col-6
      kind
    .col-6
      topic
  .row
    .col-6
      =@article_type.kind.name
    .col-6
      =@article_type.topic.description
  %hr/
  .row.mb-2.font-weight-bold
    .col-6
      source type
    .col-6
      source name
  .row
    -[@article_type&.source_type, @article_type.source_name].each do |prop|
      .col-6.pb-3
        -if prop
          =prop
        -else
          .text-danger.font-italic
            not set

  .row.mb-2.font-weight-bold
    .col-6
      source link
    .col-6
      original publish date
  .row
    -[@article_type&.source_link, @article_type.original_publish_date].each do |prop|
      .col-6
        -if prop
          =prop
        -else
          .text-danger.font-italic
            not set
  %hr/
