#reviewers_feedback_editor_modal.ml-3
  =form_with(url: story_type_fact_checking_doc_reviewers_feedback_index_path(@story_type, @story_type.fact_checking_doc),
             local: true) do |form|
    .field{ id: 'reviewers_feedback_editable', "data-controller" => "summernote" }
      =form.text_area 'reviewers_feedback[body]', data: { editor: 'summernote' }
    =form.submit "add reviewers feedback", class: 'mt-3 mb-2 btn btn-sm btn-outline-dark',
                 onclick: "sessionStorage.removeItem('reviewersFeedback');"
  .position-relative
    %hr/
    .label_to_line_modal
      recent feedback

