=form_with(url: story_type_samples_path(@story_type), class: 'small') do |form|
  =form.label :columns, 'columns(edge samples)'
  .form-group
    -@story_type.staging_table.columns.list.each do |_id, column|
      .form-check
        =form.check_box "samples[columns[#{_id}]]"
        =form.label "samples[columns[#{_id}]]", column[:name]

  =form.label :ids, 'staging table rows(eg: 1,2, 4,234)'
  .form-group.col-xl-3.col-sm-6
    =form.text_field 'samples[rows]', class: 'form-control form-control-sm'
  .col-12
    =form.submit 'Create Samples', class: 'btn btn-sm btn-outline-dark'