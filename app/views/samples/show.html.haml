%hr/
%b
  =@story_type.number_name
%hr/
-if @story_type.code.attached?
  .row
    .col-10.offset-1
      =link_to("story type's code", story_type_code_path(@story_type, @story_type.code),
               class: 'btn btn-sm btn-outline-dark', remote: true)
      =link_to("feedback", "#feedbackCollapse", "aria-controls" => "collapseExample", "aria-expanded" => "false",
               "data-toggle" => "collapse", :role => "button", class: 'btn btn-sm btn-outline-dark')
%hr/
#feedbackCollapse.collapse
  .card.card-body
    =render 'feedback/form', feedback: @story_type.iteration.feedback_confirmations
%hr/


.row
  .col-1.text-right
    Headline:
  .col-11
    %h6
      =@sample.output.headline
.row
  .col-1.text-right
    Teaser:
  .col-11
    %h6
      =@sample.output.teaser

.row.small
  .col-1.text-right
    Body:
  .col-11
    =@sample.output.body.html_safe

