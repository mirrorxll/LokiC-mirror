<div id="scrapeTasks" class="row mb-3">
  <div class="col-3 text-right pr-0">
    <b>SCRAPE TASKS:</b>
    <% if current_account_permissions('data_sets', %w[scrape_tasks edit_form]) %>
      <%= link_to(icon('fa', 'pencil-square'), edit_data_set_scrape_tasks_path(@data_set), class: 'p-0 ml-2', remote: true) %>
    <% end %>
  </div>

  <div class="col">
    <% @data_set.scrape_tasks.each do |st| %>
      <%= link_to("##{st.id} #{st.name}", scrape_task_path(st), target: '_blank') %>
      <br/>
    <% end %>
  </div>
</div>
