.row.mt-3
  #show_new_data_set_form.col-4.offset-8.text-right
    =link_to('add a new data set', '#data_set_form', 'aria-controls' => 'data_set_form',
             'aria-expanded' => false, data: { toggle: "collapse", target: "#data_set_form" },
             type: "button", id: '#crt_upd_data_set_btn', class: 'btn btn-sm btn-outline-dark')

#data_set_form.collapse
  =render 'form'
%hr/

#data_sets
  -@data_sets.sort_by { |ds| ds.name.downcase }.each do |dl|
    .row
      %small.col-1
        =dl.state&.short_name
      %small.col-1
        =dl.category&.name
      %small.col-4
        =link_to(dl.name, data_set_path(dl))
      %small.col-5
        =dl.location
      %small.col-1
        =dl.story_types.count
    %hr/
