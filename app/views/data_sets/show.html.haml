%section#data_set_info
  %a{ href: edit_data_set_path(@data_set),
      style: 'text-decoration: none; color: black;' }
    -data_set_keys.each do |key|
      .row
        .col-3.text-right
          =key.to_s.humanize
        .col-8
          -if key.eql?(:cron_scraping)
            =@data_set[key].eql?(1) ? true : false
          -else
            =@data_set[key]
%hr/

%section#story_types_filter
  =render 'story_types/filter'
%hr/

%section#new_story_type
  .row
    .col-1
    .col-5.pl-0
      =link_to('New Story Type',
               new_data_set_story_type_path(@data_set),
               class: 'btn btn-sm btn-outline-dark',
               remote: true)
%hr/

%section#story_types
  .row.small.text-center
    .col-sm-1.col-lg-1 #
    .col-sm-4.col-lg-5.pl-0.text-left name
    .col-sm-1.col-lg-1.p-0 template
    .col-sm-1.col-lg-1.p-0 props
    .col-sm-2.col-lg-2.p-0 developer
    .col-sm-2.col-lg-1.p-0 status
    .col-sm-1.col-lg-1.p-0 last export
  %hr/
  %hr/
  =render @data_set.story_types

