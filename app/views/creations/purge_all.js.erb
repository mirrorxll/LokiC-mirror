<% if flash.now[:error] %>
  $('#story_type_samples_<%= @iteration.id %> .flash').html(
    `<div class="alert alert-<%= samples_alert(flash.now[:error]) %> text-center">
        <%= flash.now[:error] %>
    </div>`
  )
<% else %>
  $('#story_type_samples_<%= @iteration.id %> .flash').empty();
<% end %>

$('#story_type_samples_<%= @iteration.id %> .card-body').html(
    '<%= j render 'story_types/spinner', description: 'purge all samples in progress' %>');

$('#story_type_scheduler_<%= @iteration.id %> .card-body').empty();
$('#story_type_export_<%= @iteration.id %> .card-body').empty();
