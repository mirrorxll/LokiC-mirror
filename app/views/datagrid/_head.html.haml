-if controller_name.in?(%w[scrape_tasks tasks shown_samples exported_story_types production_removals])
  %tr
    -grid.html_columns(*options[:columns]).each do |column|
      %th{:scope => "col"}
        =column.header
        =datagrid_order_for(grid, column, options) if column.supports_order? && options[:order]
-elsif grid.is_a?(WorkRequestsGrid)
  =render 'datagrid/work_request/head', grid: grid, options: options
-elsif grid.is_a?(FactoidRequestsGrid)
  =render 'datagrid/factoid_request/head', grid: grid, options: options
-else
  %tr
    -grid.html_columns(*options[:columns]).each do |column|
      %th{:class => datagrid_column_classes(grid, column)}
        =column.header
        =datagrid_order_for(grid, column, options) if column.supports_order? && options[:order]
