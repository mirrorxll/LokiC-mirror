#reminderPanel
  -if @story_type.updates?
    =render 'story_types/reminders/reminder'
%hr/

.row.small
  .col-6.offset-1.border-right.mr-1
    #currentDataSet
      =render 'story_types/properties/current_data_set'
    %hr/

    #clientsPublicationsTags
      =render 'story_types/properties/clients_publications_tags'
    %hr/



    #levelFrequencyPBucket
      =render 'story_types/properties/level_frequency_photo_bucket'
    %hr/

    #editorDeveloper
      =render 'story_types/properties/editor_developer'

    =render 'story_types/additional_properties'
  .col-4.border-left.ml-1
    .row.mb-1.font-weight-bold
      .col-12
        story type's code
    #story_type_code
      =render 'story_types/codes/section'
    %hr/
    -if correct_account?(@story_type)
      .row.mb-1.font-weight-bold
        .col-12
          export configurations (manual execution)
      #export_configs
        =render 'story_types/export_configurations/export_configurations'
      %hr/

      .row.mb-1.font-weight-bold
        .col-12
          cron tab

      #cron_tab_panel
        =render 'story_types/cron_tabs/cron_tab'
      %hr/

#storyTypePropertiesForm.modal.fade{ story_type_id: @story_type.id, "aria-hidden" => "true", "aria-labelledby" => "storyTypePropertiesForm", role: "dialog", :tabindex => "-1"}
  .modal-dialog.modal-dialog-scrollable.modal-xl
    .modal-content
      .modal-header
        %h5.modal-title
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", type: "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
        .properties-form

        %hr/

        .load-opportunities-button
          .row
            .col-1
            .col-2.pl-0.small
              =button_to('load opportunities', story_type_opportunities_path(@story_type), remote: true)
            .col-8.default-opportunities.d-none
              .header.small
                .row.font-weight-bold
                  .col-3
                    client
                  .col-3
                    opportunity
                  .col-3
                    opportunity type
                  .col-3
                    content type
              .list
              .small.mt-2
                =button_to('set default values', set_story_type_default_opportunities_path(@story_type),
                           method: :patch, remote: true)

        .opportunities.d-none
          %hr/
          .header
            .row.font-weight-bold.small
              .col-1
              .col-2.pl-0
                publication
              .col-2
                agency
              .col-2
                opportunity
              .col-2
                opportunity type
              .col-2
                content type
          .list

        .loadingSpinner.d-none
          .row
            .col-10.offset-1
              .spinner-border.spinner-border-sm.text-secondary
                %span.sr-only
      .modal-footer


=render 'data_sets/modal_data_set'
=render 'story_types/codes/modal_ruby_code'
