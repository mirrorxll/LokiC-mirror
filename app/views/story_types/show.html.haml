%h6.border-bottom.border-dark
  Show Template
%section#show-template
  = render 'story_types/show_template'
%hr/

%h6.border-bottom.border-dark
  Story Type Configuration
%section#story-type-configuration
  = render 'story_types/config_story_type'
%hr/

%h6.border-bottom.border-dark
  Staging Table
%section#staging-table
  -if @story_type.staging_table.nil?
    =link_to('Create staging table',
             story_type_staging_table_path(@story_type),
             method: :post,
             remote: true,
             class: 'btn btn-sm btn-outline-dark d-inline-block mb-3')
    =render 'staging_tables/attach_form'
  -else
    =render 'staging_tables/columns_indexes'
%hr/

%h6.border-bottom.border-dark
  Story Type Code Upload
%section#code-file
  - if @story_type.code.attached?
    = render 'codes/story_type_code'
  - else
    = render 'codes/form'
  %hr

- if @story_type.code.attached?
  = render 'codes/execute'