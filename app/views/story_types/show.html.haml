%h6.border-bottom.border-dark
  Edit Template
%section#edit-template
  = render 'story_types/edit_template'
%hr/

%h6.border-bottom.border-dark
  Show Template
%section#show-template
  = render 'story_types/show_template'
%hr/

%h6.border-bottom.border-dark
  Story Type Configuration
%section#story-type-configuration
  = render 'story_types/config_story_type'
%hr/

%h6.border-bottom.border-dark
  Story Type Table
%section#staging-table
  - if @story_type.staging_table.present?
    = render 'staging_tables/columns'
  - else
    = render 'staging_tables/form'
%hr/

%h6.border-bottom.border-dark
  Story Type Code Upload
%section#code-file
  - if @story_type.code.attached?
    = render 'codes/story_code'
  - else
    = render 'codes/form'
  %hr

- if @story_type.code.attached?
  = render 'codes/execute'