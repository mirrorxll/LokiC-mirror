#cover-spin
.row.border-top.mt-3.ml-0.mr-0.pt-3
  .col-10.offset-1.text-center
    #reminderPanel
      -if @story_type.updates?
        =render 'story_types/reminders/reminder'
        %hr/
  .col-10.offset-1
    #currentDataSet
      =render 'story_types/properties/current_data_set'
    %hr/
  .col-10.offset-1
    #clientsPublicationsTags
      =render 'story_types/properties/clients_publications_tags'
    %hr/
  .col-10.offset-1
    #levelFrequencyPBucket
      =render 'story_types/properties/level_frequency_photo_bucket_dev'
  .col-10.offset-1.text-center
    =render 'story_types/main/additional_properties'

.row.border-top.ml-0.mr-0.pt-3.text-center
  .col-3.offset-1
    story type's code
    #story_type_code
      =render 'story_types/codes/section'
  .col-4
    export configurations (manual execution)
    #export_configs
      =render 'story_types/export_configurations/export_configurations'
  .col-3
    cron tab
    #cron_tab_panel
      =render 'story_types/cron_tabs/cron_tab'

