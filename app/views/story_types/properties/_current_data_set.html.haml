.row.mb-1.font-weight-bold
  .col-12
    data set
.row
  .col-12
    =link_to @story_type.data_set.name, data_set_path(@story_type.data_set), class: 'no-link'
    .d-inline-block.mr-2.ml-2{id: "story_type_#{@story_type.id}_properties"}
      -# =link_to(icon('fa', 'sliders'), story_type_properties_form_path(@story_type), remote: true)
      %button{ onclick: 'loadEditForm(this);', type: 'button', class: 'p-0 pb-1 btn btn-sm btn-link ml-2', 'data-toggle' => "modal", 'data-target' => "#storyTypePropertiesForm" }
        =icon('fa', 'sliders')
      :javascript
        function loadEditForm(button) {
          button.onclick = null;
          Rails.ajax({
            type: "GET",
            dataType: 'script',
            url: `#{story_type_properties_form_path(@story_type)}`
          })
        }
    =link_to icon('fa', 'info-circle'), properties_data_set_path(@story_type.data_set), remote: true
