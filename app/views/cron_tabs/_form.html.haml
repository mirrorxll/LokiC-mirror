=form_with(model: [@story_type, @cron_tab], html: { class: 'm-3'}) do |form|
  .text-center.mb-2
    %div{ class: 'w-339_25px text-left d-inline-block' }
      =form.check_box :enabled
      =form.label :enabled, 'enabled'

  #cron_pattern.text-center
    .text-secondary.d-inline-block
      (minute)
      %br/
      =form.text_field 'setup[pattern[minute]]', class: 'w-65px form-control form-control-sm', required: true
    .text-secondary.d-inline-block
      (hour)
      %br/
      =form.text_field 'setup[pattern[hour]]', class: 'w-65px form-control form-control-sm', required: true
    .text-secondary.d-inline-block
      (day)
      %br/
      =form.text_field 'setup[pattern[day]]', class: 'w-65px form-control form-control-sm', required: true
    .text-secondary.d-inline-block
      (month)
      %br/
      =form.text_field 'setup[pattern[month]]',  class: 'w-65px form-control form-control-sm', required: true
    .text-secondary.d-inline-block
      (week day)
      %br/
      =form.text_field 'setup[pattern[week_day]]', class: 'w-65px form-control form-control-sm', required: true
  .text-center
    =form.text_field 'setup[population_params]', placeholder: 'population params', class: 'w-339_25px mt-2 form-control form-control-sm d-inline-block'
    =form.submit 'setup crontab', class: 'w-250px mt-2 в-шт btn btn-sm btn-outline-dark'
    =link_to('cancel', '#', class: 'w-85px mt-2 btn btn-sm btn-light')

%hr/
#cron_description.text-center
%hr/

=javascript_pack_tag 'cron/form'