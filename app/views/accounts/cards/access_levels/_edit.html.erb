<%= form_with(url: account_card_access_level_path(account, card, access_level), method: :patch) do |f| %>
  <div class="access-levels card small">
    <div class="card-body">
      <b class="d-inline-block mb-2">NAME:</b>
      <%= f.text_field "access_level[name]", class: 'form-control form-control-sm', required: true, value: access_level.name %>
    </div>
  </div>
  <hr>
  <div>
    <%= permissions_form(f, access_level.permissions, "access_level[permissions]", checked: true) %>
    <div class="text-center">
      <%= f.submit '[ update ]', class: 'btn btn-sm btn-link p-0' %>
      <%= link_to('[ cancel ]', account_card_access_level_path(account, card, card.access_level), class: 'btn btn-sm btn-link text-secondary p-0', remote: true) %>
    </div>
  </div>
<% end %>
