<%= form_with(url: account_roles_path(@account), method: :put) do |f| %>
  <% AccountRole.all.each do |r| %>
    <%= f.check_box "roles[#{r.id}]", checked: @account.roles.exists?(r.id)  %>
    <%= f.label "roles[#{r.id}]", r.name %>
    <br>
  <% end %>

  <div class="m-1"></div>

  <%= f.submit '[ save ]', class: 'btn btn-sm btn-link p-0' %>
  <%= link_to('[ cancel ]', account_roles_path, class: 'btn btn-sm btn-link text-secondary p-0', remote: true) %>
<% end %>
