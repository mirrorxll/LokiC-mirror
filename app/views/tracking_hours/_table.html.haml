%hr/
%section#developers_production.small
  .row.text-center
    .col-1 hours
    .col-3.pl-0.text-left type of work
    .col-2 client
    .col-2 date
    .col-3 comment
  %hr/
  %hr/
  -rows_reports.each do |row|
    .row.text-center{id: "row_#{row['id']}"}
      .col-1
        =row['hours']
      .col-3
        =row.type_of_work.name
      .col-2
        =row.clients_report.name
      .col-2
        =row['date'].strftime('%F')
      .col-3
        =row['comment']
      .col-1
        =link_to(icon('fas', 'minus'), exclude_row_tracking_hour_path(id: row['id']), method: :delete, remote: true)

