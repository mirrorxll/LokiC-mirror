=form_with(url: tracking_hours_path, method: 'post') do |form|
  #add_report.mb-2
    =icon('fas', 'plus')
  #reports_editable
  =form.submit 'submit', class: 'mt-4 btn btn-sm btn-outline-dark'

:javascript
  var reports_block = $('#reports_editable');
  $('#add_report').click(function () {
    let hex = secureRandom(6);

    var typesOfWorks = #{raw TypeOfWork.order(name: :asc).map{|type| type.name}};
    var clients = #{raw ClientsReport.order(name: :asc).map{|type| type.name}};

    $(reports_block).append(
        `<div id="report_${hex}" class="mb-1">
            <div class="remove_report d-inline-block" id="rm_report_${hex}" onclick="removeDate(this)"><i class="fas fa-minus"></i></div>
            <input id="report_${hex}_hours" required="required" type='text" name="report[${hex}[hours]]">
            <select class="h_25px" id="report_${hex}_type_of_work" name="report[${hex}[type_of_work]]">${buildSelect(typesOfWorks)}</select>
            <select class="h_25px" id="report_${hex}_client" name="report[${hex}[client]]">${buildSelect(clients)}</select>
            <input id="report_${hex}_date" required="required" type="date" name="report[${hex}[date]]">
        </div>`
    );
  });

  function secureRandom(n){
    let result = '';
    while (n--){
      result += Math.floor(Math.random() * 16).toString(16);
    }

    return result;
  }

  function removeDate(elem) {
    $(elem.parentNode).remove();
  }

  function buildSelect(options) {
    var $select = $('');

    for (var i = 0; i < options.length; i++) {
      $select += ('<option value="' + options[i] + '">' + options[i] + '</option>');
          console.log($select);
    }
    console.log($select);
    return $select;
  }


