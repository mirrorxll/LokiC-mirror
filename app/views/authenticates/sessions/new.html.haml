.login_container.d-flex.justify-content-center.align-items-center
  =form_with(url: sign_in_path, class: 'col-sm-10 col-xl-3 p-5 border rounded-lg', local: true) do |f|
    .text-center.mb-5
      LokiC
    .form-group
      =f.email_field :email, placeholder: 'email', class: 'form-control form-control-sm', required: true
      .m-1
      =f.password_field :password, placeholder: 'password', class: 'form-control form-control-sm', required: true
    .form-group.form-check.small
      .row
        .col.pr-0
          =f.check_box :remember_me, class: 'form-check-input'
          =f.label :remember_me, class: 'form-check-label'
        .col.pl-0.text-right
          =link_to('Password Reset', send_password_reset_email_path)
    .form-group
      =f.submit 'Sign In', class: 'btn btn-sm btn-outline-dark w-100'
