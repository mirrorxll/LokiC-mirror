.login_container.d-flex.justify-content-center.align-items-center
  =form_with(url: password_reset_path(token: params[:token]), class: 'col-sm-10 col-xl-3 p-5 border rounded-lg', method: :patch, local: true) do |f|
    .text-center.mb-5
      LokiC :: Password Reset
    .form-group
      =f.text_field :email, class: 'form-control form-control-sm', disabled: true, readonly: true, value: @account.email
    .form-group
      =f.password_field :password, placeholder: 'password', class: 'form-control form-control-sm', required: true
      .m-1
      =f.password_field :password_confirmation, placeholder: 'password confirmation',
                        class: 'form-control form-control-sm', required: true
    .form-group
      =f.submit 'Reset', class: 'btn btn-sm btn-outline-dark w-100'
