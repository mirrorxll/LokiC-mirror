%hr/
#header.row.justify-content-between.align-items-center.mt-3
  .col-6
    Total:
    =@grid.assets.total_count
  .col-6.text-right.text-uppercase
    .btn-group.mr-3
      -lists = %w[yours all]
      -lists.each do |list|
        -filled = (!params[:list].in?(lists) && list.eql?('yours')) || params[:list].eql?(list) ? '' : '-outline'
        =link_to(list, url_for(list: list), class: "btn btn-sm btn#{filled}-dark")
      =link_to('archived', url_for(list: :archived), class: "disabled btn btn-sm btn-outline-dark")
    .btn-group
      =link_to('filter', '#', class: 'disabled btn btn-sm btn-outline-dark',
               "data-target" => "#createFactoidRequestModal", "data-toggle" => "modal")
      =link_to('create', '#', class: 'btn btn-sm btn-outline-dark',
               "data-target" => "#createFactoidRequestModal", "data-toggle" => "modal")
%hr/

#filter.mt-3.mb-3.collapse{ class: (params[:scrape_tasks_grid] ? 'show' : '') }
  =datagrid_form_for @grid, url: factoid_requests_path

.row.small.mb-5
  .col-12
    =datagrid_table(@grid)

.fixed-bottom.bg-light
  .row
    .col-12.p-2
      =paginate @grid.assets

#createFactoidRequestModal.modal.fade{ "aria-hidden" => "true", "aria-labelledby" => "createWorkRequestModal",
                                       'data-backdrop' => 'static', "data-keyboard" => "false" }
  .modal-dialog.modal-dialog-scrollable.modal-lg
    .modal-content
      .modal-header
        NEW FACTOID REQUEST
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
        =render 'new'
      .modal-footer.justify-content-center
        =link_to('CREATE', '#', id: 'createFactoidRequestButton', class: 'btn btn-sm btn-dark')
        .btn.btn-sm.btn-outline-secondary{ "aria-label" => "Close", "data-dismiss" => "modal", type: "button" }
          CANCEL

:javascript
  document.querySelector('#createFactoidRequestButton').addEventListener('click', (event) => {
    event.preventDefault();
    document.querySelector('#hiddenCreateButton').click();
  }, false);

