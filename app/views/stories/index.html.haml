%hr/
%section#filter
  .row
    .col-9
      = render 'filter'
    .col-3.d-flex.justify-content-center.align-self-center
      = link_to('Add Story', new_story_path, class: 'btn btn-success')

%hr/
%hr/

%section#stories.text-center
  .row
    .col-1
      ROW
    .col-5
      NAME
  - @stories.each do |story|
    .row{id: "story-#{story.id}"}
      .col-1
        = story.id
      .col-5.text-left
        = link_to(story.name, story_path(story))
