= form_with(model: @story, html: onchange_submit?) do |form|
  .div.field
    = form.label          :name
    %br/
    = form.text_field     :name
    %br/
    .field{"data-controller" => "summernote"}
      = form.label :body
      = form.text_area :body, data: { editor: 'summernote' }
    %br/
    = form.label          :description
    %br/
    = form.text_field     :description
    %hr/
    .row
      .col-3
        = form.label          :deadline
        %br/
        = form.date_field     :deadline
      .col-3
        = form.label          :desired_launch
        %br/
        = form.date_field     :desired_launch
      .col-3
        = form.label          :last_launch
        %br/
        = form.date_field     :last_launch
      .col-3
        = form.label          :last_export
        %br/
        = form.date_field     :last_export
    %hr/

    - if select_statuses?
      .row
        .col-2
          = form.label  :status
          = form.select :status, statuses, prompt: true
    - else
      = form.submit :create
