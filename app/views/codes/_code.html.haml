.row
  .col-10.offset-1
    =link_to('detach', detach_story_type_codes_path(@story_type),
             class: 'btn btn-sm btn-outline-danger', method: :delete, remote: true)
    .btn-group.ml-3
      =button_to('reload', reload_story_type_codes_path(@story_type),
               class: 'btn btn-sm btn-outline-dark', method: :put, remote: true, data: { disable_with: '...'})
      =link_to('download', url_for(@story_type.code),
               class: 'btn btn-sm btn-outline-dark')
      =link_to('show', story_type_codes_path(@story_type),
               class: 'btn btn-sm btn-outline-dark', remote: true)
