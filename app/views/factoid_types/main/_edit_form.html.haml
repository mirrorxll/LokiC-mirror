=form_with(model: @factoid_type) do |form|
  .row
    .col-11.d-flex.p-0
      =form.text_field :name, placeholder: 'new name', required: true, class: 'w-100'
      =form.submit :rename
    .col-1.p-1
      =link_to icon('fa', 'fa fa-times text-dark'), canceling_rename_factoid_type_path(@factoid_type), remote: true
