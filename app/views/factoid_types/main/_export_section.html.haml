-if @iteration.creation && !@iteration.purge_creation.eql?(true)
  -factoids = @iteration.factoids
  -published = factoids.published.count
  -ready_to_publish = factoids.not_published.count

  #factoid_type_export.card.h-100
    .card-header.d-flex.justify-content-between.align-items-center
      EXPORT (iteration: #{@iteration.name})
      #export_control
        =render 'factoid_types/exports/export_control'

    #export
      .flash
      .card-body.d-flex.flex-column.text-center
        =render 'factoid_types/publishes/publish', factoids: factoids,
                                                   published: published,
                                                   ready_to_publish: ready_to_publish
