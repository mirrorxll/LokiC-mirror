-if samples.count.positive? || @iteration.creation
  .row
    .col-11.offset-1
      =link_to('fact checking', factoid_type_fact_checking_doc_path(@factoid_type, @factoid_type.fact_checking_doc),
               class: 'btn btn-sm btn-outline-dark', target: '_blank')
      -if @iteration.creation
        =render 'factoid_types/samples/stories_link'
      -if @iteration.export.nil?
        -if @iteration.creation.eql?(nil) && @factoid_type.fact_checking_doc.approval_editors.count > 1
          =link_to('create samples from the last iteration',
                    execute_factoid_type_iteration_creations_path(@factoid_type, @iteration),
                    class: 'btn btn-sm btn-outline-dark', method: :post, remote: true)
        -elsif @iteration.creation && @iteration.articles.published.count.zero?
          =link_to('purge samples from the last iteration',
                    purge_factoid_type_iteration_creations_path(@factoid_type, @iteration),
                    id: 'purge_stories', class: 'btn btn-sm btn-outline-danger',
                    method: :delete, remote: true)
