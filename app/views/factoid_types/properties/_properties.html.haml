.row.border-top.my-3.mx-0.pt-3
  .col-10.offset-1
    #currentDataSet
      =render 'factoid_types/properties/current_data_set'
  .col-10.offset-1
    #sourceProperties
      =render 'factoid_types/properties/factoid_type_source_properties'
  .col-10.offset-1
    -if @factoid_types_permissions['developer']['show']
      .row.mb-1.font-weight-bold
        .col
          developer
      #developer_section
        =render 'factoid_types/properties/developer'
  .col-10.offset-1.text-center.d-none
    =render 'factoid_types/main/additional_properties'
.row.border-top.mx-0.mb-3.pt-3.text-center
  .col-10.offset-1
    factoid type's code
    #factoid_type_code
      =render 'factoid_types/codes/section'

