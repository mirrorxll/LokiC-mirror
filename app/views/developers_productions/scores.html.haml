%section#developers_production.small
  .row.text-center.justify-content-center
    .col-2 developer
    .col-2 hours
    .col-2 score
    .col-2 hours per story
  %hr/
  -@rows_reports.each do |row|
    %hr/
    .row.text-center.justify-content-center
      .col-2
        ="#{row[:developer].first_name} #{row[:developer].last_name}"
      .col-2
        =link_to row[:hours], show_hours_developers_productions_path(developer: row[:developer], begin_date: @begin_date), remote: true
      .col-2
        =row[:score]
      .col-2
        =row[:hours_per_story]

