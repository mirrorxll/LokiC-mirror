<div id="tags" class="row mb-3">
  <div class="col-3 text-right pr-0">
    <b>TAGS:</b>
    <% if current_account_permissions('scrape_tasks', %w[tags edit_form]) %>
      <%= link_to(icon('fa', 'pencil-square'), edit_scrape_task_tags_path(@scrape_task), class: 'p-0 ml-2', remote: true) %>
    <% end %>
  </div>

  <div class="col d-flex align-items-center">
    <% if current_account_permissions('scrape_tasks', %w[grid all]) %>
      <% @scrape_task.tags.each do |tag| %>
        <div class="badge badge-pill badge-info mr-1">
          <%= link_to(tag.name, scrape_tasks_path(list: :all, scrape_tasks_grid: { tag: [tag.id] }), class: 'text-white') %>
        </div>
      <% end %>
    <% else %>
      <% @scrape_task.tags.each do |tag| %>
        <div class="badge badge-pill badge-info mr-1">
          <%= tag.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
