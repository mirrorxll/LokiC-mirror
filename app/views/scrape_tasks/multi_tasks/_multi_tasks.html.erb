<div id="multiTasks" class="row mb-3">
  <div class="col-3 text-right pr-0">
    <b>MULTI TASKS:</b>
    <% if current_account_permissions('scrape_tasks', %w[multi_tasks edit_form]) %>
      <%= link_to(icon('fa', 'pencil-square'), edit_scrape_task_multi_tasks_path(@scrape_task), class: 'p-0 ml-2', remote: true) %>
    <% end %>
  </div>

  <div class="col">
    <% @scrape_task.multi_tasks.each do |task| %>
      <%= link_to("##{task.id} #{task.title}", multi_task_path(task), target: '_blank') %>
      <br/>
    <% end %>
  </div>
</div>
