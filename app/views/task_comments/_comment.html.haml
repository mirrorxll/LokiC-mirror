%div{ id: "comment_#{comment.id}"}
  .row.small.mr-1
    .col-5.mb-1
      -unless comment.commentator.nil?
        .font-weight-bold
          =comment.commentator.name
    .col-5
      .text-secondary.font-italic.small.mt-1.text-left
        =comment.created_at.strftime('%F %R %Z')
    .col-2
      -if comment.subtype.eql?('user comment') && comment.commentator.eql?(current_account)
        .dropdown
          %span.font-weight-bold{"data-toggle" => "dropdown", :type => "button"} ...
          %ul.dropdown-menu
            %li
              =link_to 'edit', edit_task_comment_path(@task, comment), remote: true, class: 'dropdown-item'
            %li
              =link_to 'delete', task_comment_path(@task, comment), method: :delete, remote: true, class: 'dropdown-item', data: { confirm: 'Are you sure you want to delete the comment?' }
  .row.small.col-12.d-block
    =comment.body&.html_safe
  %hr.mt-3.mb-3/
