=form_with(url: task_comment_path(@task, @comment), method: :patch, html: { onkeypress: "return event.keyCode !== 13;" }) do |form|
  .row
    .col.small
      =form.rich_text_area :body, class: 'form-control overflow-auto', style: 'min-height: 150px;', value: @comment.body&.html_safe
  .modal-footer.justify-content-center
    =form.submit :update, class: 'btn btn-sm btn-outline-success'
