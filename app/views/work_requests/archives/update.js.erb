$('#archiveWorkRequest').html('<%=
  if params[:archived].eql?('false')
    link_to(
      '[ archive ]',
      work_request_archive_path(@work_request, archived: true),
      data: { confirm: "Work Request will be hidden from Work Requests' queue. Continue?" },
      class: 'p-0 btn btn-sm text-danger small',
      onclick: 'archiveSpinnerAnimation()',
      method: :patch, remote: true
    )
  else
    link_to(
      '[ unarchive ]',
      work_request_archive_path(@work_request, archived: false),
      class: 'p-0 btn btn-sm text-danger small',
      onclick: 'archiveSpinnerAnimation()',
      method: :patch, remote: true
    )
  end
   %>')

document.querySelector('#createMultiTask button').disabled = <%= params[:archived].eql?('true') %>;
document.querySelector('#editWorkRequest button').disabled = <%= params[:archived].eql?('true') %>;
