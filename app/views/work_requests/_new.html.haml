            .row.mb-2.align-items-center{ class: "client-#{cl.id}"}
              .col-1.text-right
                =f.check_box "work_request[tf_client__#{cl.id}]"
              .col-11.pl-0.text-left
                =f.label "work_request[tf_client__#{cl.id}]", cl.name, class: 'm-0'
