-if (current_account.types & ['manager', 'outside manager']).any?
  .row.mt-4.mb-4
    .col-3.pr-0.text-right.font-weight-bold
      requester:
    .col-9
      =@work_request.requester.name
-else
  .m-4

-#.row
  .col-3.pr-0.text-right.font-weight-bold
    work types:
  .col-9
    -@work_request.work_types.each do |wt|
      =wt.name
      %br
.row.mb-1
  .col-3.pr-0.text-right.font-weight-bold
    clients:
  .col-9
    -@work_request.clients.each do |cl|
      =cl.name
      %br
-#.row.mb-1
  .col-3.pr-0.text-right.font-weight-bold
    underwriting Project:
  .col-9
    =@work_request.underwriting_project&.name
-#.row.mb-4
  .col-3.pr-0.text-right.font-weight-bold
    revenue types:
  .col-9
    -@work_request.revenue_types.each do |rt|
      =rt.name
      %br



.row.mb-1.text-break
  .col-3.pr-0.text-right.font-weight-bold
    project order name:
  .col-9
    =@work_request.project_order_name.body

-# -if(current_account.types & ['manager', 'outside manager']).any?
  .row.mb-1.text-break
    .col-3.pr-0.text-right.font-weight-bold
      SOW:
    .col-9
      -if @work_request.default_sow
        .small
          *** For attaching SOW document please press [ edit ] button and scroll to SOW section
        =link_to('Create SOW Here (template)', 'https://docs.google.com/document/d/1XGBr8mitj6Ui4uTXiCZnevLx7F-5R0Ru0ZNkBLvXpWI/edit',
                 target: '_blank', rel: 'noopener noreferrer')
      -else
        -name = @work_request.sow[/document/] ? 'Google Document' : 'Google Sheet'
        =link_to(name, @work_request.sow, target: '_blank', rel: 'noopener noreferrer')

.row.mb-1.text-break
  .col-3.pr-0.text-right.font-weight-bold
    project order details:
  .col-9
    =@work_request.project_order_details.body&.gsub(/\n/, '<br/>')&.html_safe

.row.mb-4.text-break
  .col-3.pr-0.text-right.font-weight-bold
    most worried details:
  .col-9
    =@work_request.most_worried_details.body&.gsub(/\n/, '<br/>')&.html_safe



-#.row.mb-1
  .col-3.pr-0.text-right.font-weight-bold
    budget for project:
  .col-9
    =@work_request.budget_for_project.body
-#.row.mb-1.align-items-end
  .col-3.pr-0.text-right.font-weight-bold
    invoice type:
  .col-9
    =@work_request.invoice_type&.name
-#.row.mb-1.align-items-end
  .col-3.pr-0.text-right.font-weight-bold
    invoice frequency:
  .col-9
    =@work_request.invoice_frequency&.name
-#.row.mb-1.align-items-end
  .col-3.pr-0.text-right.font-weight-bold
    first invoice date:
  .col-9
    =@work_request.first_invoice
.row.mb-4.align-items-end
  .col-3.pr-0.text-right.font-weight-bold
    last invoice date:
  .col-9
    =@work_request.last_invoice



.row.mb-1.align-items-end
  .col-3.pr-0.text-right.font-weight-bold
    goal deadline:
  .col-9
    =@work_request.goal_deadline
.row.mb-1.align-items-end
  .col-3.pr-0.text-right.font-weight-bold
    final deadline:
  .col-9
    =@work_request.final_deadline
.row.mb-4.align-items-end
  .col-3.pr-0.text-right.font-weight-bold
    ETA:
  .col-9
    =@work_request.eta
.row.mb-1.align-items-end
  .col-3.pr-0.text-right.font-weight-bold
    priority:
  .col-9
    =@work_request.priority.name
