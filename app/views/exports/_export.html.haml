.small
  -iteration = @story_type.iteration
  -if @story_type.staging_table && iteration.creation && iteration.schedule
    -samples = iteration.samples
    -exported = samples.where.not(pl_production_id: nil).count
    -total = samples.count

    -if iteration.export.eql?(true)
      .row
        .col-10.offset-1
          total exported: #{exported}
      .row
        .col-10.offset-1
          =link_to('exported stories', exported_stories_story_type_iteration_exports_path(@story_type, iteration),
                   class: 'mt-3 btn btn-sm btn-outline-dark', target: '_blank')

    -elsif iteration.export.eql?(false)
      =render 'story_types/spinner', description: 'export in progress'
    -else
      .row.mb-2
        .col-10.offset-1
          ready to export: #{total}
      .row
        .col-10.offset-1
          =link_to('export!', production_story_type_iteration_exports_path(@story_type, iteration),
                   class: 'mt-3 btn btn-sm btn-outline-dark',
                   method: :post, remote: true)
